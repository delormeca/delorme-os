# =====================================================
# STAGING ENVIRONMENT - Render.com
# =====================================================
# Copy values to Render.com Dashboard > Environment Variables

# Environment
env=staging

# Database (Auto-configured by Render)
# These are automatically set by Render when you link the database
# db_username - linked from database
# db_password - linked from database
# db_host - linked from database
# db_port - linked from database
# db_database - linked from database
db_sslmode=require

# Security (IMPORTANT: Generate secure values for production)
secret_key=GENERATE_SECURE_KEY_IN_RENDER_DASHBOARD
algorithm=HS256
access_token_expire_minutes=10080

# Application URLs (Update after deployment)
domain=https://velocity-staging-frontend.onrender.com
redirect_after_login=https://velocity-staging-frontend.onrender.com/dashboard

# Google OAuth (Get from Google Cloud Console)
google_oauth2_client_id=YOUR_GOOGLE_CLIENT_ID
google_oauth2_secret=YOUR_GOOGLE_CLIENT_SECRET
google_oauth2_redirect_uri=https://velocity-staging-backend.onrender.com/api/auth/google_callback

# Stripe Payments (Use TEST keys for staging)
STRIPE_SECRET_KEY=sk_test_YOUR_TEST_KEY
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_TEST_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# Product Price IDs (from Stripe Dashboard)
STRIPE_PRICE_STARTER=price_test_placeholder
STRIPE_PRICE_PRO=price_test_placeholder
STRIPE_PRICE_PREMIUM_SUB=price_test_placeholder
STRIPE_PRICE_ENTERPRISE_SUB=price_test_placeholder

# Email Configuration
mailchimp_api_key=YOUR_MAILCHIMP_API_KEY
from_email=noreply@yourdomain.com
from_name=Velocity Staging
support_email=support@yourdomain.com

# AI API Keys
openai_api_key=sk-proj-YOUR_OPENAI_KEY
tavily_api_key=tvly-YOUR_TAVILY_KEY

# Optional AI retrievers
google_api_key=
google_cx=
bing_api_key=
serper_api_key=
serpapi_api_key=

# Research Configuration
research_max_iterations=5
research_default_retriever=tavily
research_output_dir=./outputs/research
